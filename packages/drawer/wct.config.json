{
  "moduleResolution": "node",
  "npm": true,
  "plugins": {
    "local": {
      "browsers": [
        "chrome"
      ],
      "browserOptions": {
        "chrome": [
          "disable-gpu",
          "headless"
        ],
        "firefox": [
          "-headless"
        ]
      }
    }
  },
  "suites": [
    "test/**/*.html"
  ],
  "verbose": true,
  "expanded": true,
  "compile": "auto"
}
