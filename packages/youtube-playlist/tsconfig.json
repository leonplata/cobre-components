{
  "compilerOptions": {
    "declaration": true,
    "experimentalDecorators": true,
    "useDefineForClassFields": false,
    "module": "ES2015",
    "moduleResolution": "Node",
    "noImplicitAny": true,
    "removeComments": true,
    "outDir": "./",
    "target": "ES2015",
    "sourceMap": true,
    "lib": ["DOM", "ES2015"],
    "strictNullChecks": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.stories.ts",
    "**/*.spec.ts"
  ]
}